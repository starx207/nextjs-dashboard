/*
  EsLint Ref                                : https://eslint.org/docs/rules/
  Typescript-EsLint Ref                     : https://github.com/typescript-eslint/typescript-eslint/tree/master/packages/eslint-plugin/docs/rules
  Prettier Ref (config in .prettierrc.json) : https://prettier.io/docs/en/index.html
*/
{
  "$schema": "https://json.schemastore.org/eslintrc.json",
  "extends": ["next/core-web-vitals", "next/typescript", "prettier"],
  "plugins": ["no-relative-import-paths"],
  "rules": {
    "@typescript-eslint/no-unused-vars": "off",
    "no-relative-import-paths/no-relative-import-paths": [
      "error",
      { "allowSameFolder": true, "prefix": "@" }
    ]
  }
}
